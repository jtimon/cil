mode test

// arithmetics:

c2      := 2
c4      := 4
c42     := 42

test(loc(), c42.eq(add(40, 2)), "40 + 2 = 42")
test(loc(), c42.eq(sub(44, 2)), "44 - 2 = 42")
test(loc(), c42.eq(mul(6, 7)), " 6 * 7 = 42")
test(loc(), c42.eq(div(420, 10)), " 420 / 10 = 42")
test(loc(),  c4.eq(add(2, 2)), "2 + 2 = 4")
test(loc(),  c4.eq(mul(2, 2)), "2 * 2 = 4")
