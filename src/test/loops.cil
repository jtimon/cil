mode script

// while loops:

mut it := 0 // one has to use the 'mut' keyword for actual variables, since all declarations are const by default
print("it: ")
// while 42 { // fails, because while expects a bool first, not an int
while lt(it, 5) {
    print(itoa(it), " ")
    it = add(it, 1)
}
println(" ")
